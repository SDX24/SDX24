#!/bin/sh

# Run lint-staged first
bunx lint-staged

# Type check to ensure no errors
echo "Running type check..."
bun run type-check
if [ $? -ne 0 ]; then
  echo "❌ TypeScript errors detected. Commit blocked."
  echo "Fix type errors before committing."
  exit 1
fi

echo "✅ Pre-commit checks passed!"
